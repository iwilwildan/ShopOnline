@page "/"
@using ShopOnline.Models.Dtos
@inherits ProductsBase

@if (Products == null)
{
    <h3>Loading products... </h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();
    @if (productCount > 0)
    {
        var groupedProductsByCategoty = GetGroupedProductsByCategory();

        @foreach(var item in groupedProductsByCategoty)
        {
            <h4>@GetCategoryName(item)</h4>
            <div class="row mt-3">
                <DisplayProduct Products=item.Take(4)>

                </DisplayProduct>

            </div>
            <hr class="mb-3" />
        }
    }
}
